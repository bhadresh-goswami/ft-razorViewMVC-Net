
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<div class="container">
    <div class="col-md-6 col-md-offset-3">
        @using (Html.BeginForm("Login", "User", FormMethod.Post,
            htmlAttributes: new { @class = "form-horizontal" }))
        {
            <table class="table table-responsive">
                <tr>
                    <td>
                        @Html.Label("Enter User Name:", htmlAttributes: new { @class = "control-label", @id = "lblName" })
                    </td>
                    <td>
                        @Html.TextBox("txtName", null, htmlAttributes: new { @class = "form-control" })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Enter User Password:", htmlAttributes: new { @class = "control-label", @id = "lblName" })
                    </td>
                    <td>
                        @Html.Password("txtPassword", null, htmlAttributes: new { @class = "form-control" })
                    </td>
                </tr>
                <tr>
                    <td class="" colspan="2">
                        <button class="btn btn-primary"><i class="glyphicon glyphicon-user"></i>  Login</button>
                        @if (ViewBag.error != null)
                        {
                            <div class="alert alert-danger">
                                @ViewBag.error
                            </div>
                        }
                        else if (ViewBag.message != null)
                        {
                            <div class="alert alert-success">
                                @ViewBag.message
                            </div>
                        }

                    </td>
                </tr>
            </table>
        }

    </div>
    <br />
</div>